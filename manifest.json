{
    "manifest_version": 2,

    "name": "SW patch",
    "version": "1.0.2",

    "icons": {
        "16": "img/16x16.png",
        "32": "img/32x32.png",
        "48": "img/48x48.png"
    },

    "permissions": [
        "https://*.sonic-world.ru/*",
        "http://*.sonic-world.ru/*",
        "storage", "notifications"
    ],

    "browser_action": {
        "default_title": "Patch for sonic-world.ru",
        "default_icon": "img/48x48.png",
        "default_popup": "html/popup.html"
    },

    "content_scripts": [
        {
            "matches": ["https://*.sonic-world.ru/*", "http://*.sonic-world.ru/*"],
            "css": ["css/add.css"],
            "js": ["js/contentscript.js"]
        }
    ],

    "options_page": "html/options.html",

    "web_accessible_resources": [
        "js/jquery-1.11.1.min.js",
        "js/common.js",
        "css/add.css"
    ]
}
